.vip-room{
  width: 200%;
  height: 525rpx;
  background-image: linear-gradient(-218deg, #FFC39F 0%, #FF874C 100%);
  overflow-x: hidden;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
  transform: translateX(-25%);
}
.header-content{
  margin: 0 25%;
  height: 100%;
}
.header-content-item{
  padding: 20rpx 20rpx 0 20rpx;
}
.user-info{
  justify-content: space-between;
}
.user-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.user-name{
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 10rpx;
}
.vip-deadline{
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #ffffff;
}
.icon-vip{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url("data:image/svg+xml;base64,");
}

.vip-description{
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #fff;
}
.icon-questionfill{
  font-size: 24rpx;
  margin-left: 10rpx;
}
.vip-privilege{
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  position: absolute;
  top: 280rpx;
  left: 20rpx;
  right: 20rpx;
}

.vip-description-dialog{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .8);
}
.dialog-content{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 30rpx;
  width: 550rpx;
  height: 720rpx;
  overflow-y: scroll;
  border: 1rpx solid rgba(255, 200, 200, .5);
  box-shadow: 0 0 20rpx rgba(255, 241, 241, .9);
  padding: 30rpx;
  font-size: 26rpx;
  color: #2A2A2A;
  letter-spacing: 5rpx;
  line-height: 50rpx;
  transition: transform 1s;
}
