page{
  background-color:#f5f5f5;
}
.tabs-wrapper{
  align-items: center;
  margin-bottom: 10rpx;
}
.tab-item{
  flex: 1;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  font-size: 28rpx;
}
.tab-active{
  color: #E41919;
  position: relative;
}
.tab-active::after{
  content: '';
  display: block;
  position: absolute;
  width: 50%;
  left: 50%;
  height: 5rpx;
  bottom: 0rpx;
  background-color: #E41919;
  transform: translateX(-50%);
}

.product-info{
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx 20rpx 0;
}
.icon-icon_crab_coloured{
  color: rgb(255, 90, 90);
  font-size: 48rpx;
}
.product-time{
  font-size: 24rpx;
  color: #B0B0B0;
  margin-right: 20rpx;
}
.product-status{
  color: #E41919;
  padding: 10rpx;
  border-radius: 10rpx;
  letter-spacing: 5rpx;
  background: linear-gradient(to right, #FFF1F1, #ffffff);
}
.order-item{
  background-color: #ffffff;
  padding: 20rpx 0 20rpx 30rpx;
  margin-bottom: 10rpx;
}
.product-list{
  white-space: nowrap;
  overflow-x: scroll;
}
.product-item{
  display: inline-block;
  margin-right: 30rpx;
  padding-bottom: 20rpx;
}
.product-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.product-name{
  text-align: center;
  color: #2A2A2A;
  margin: 10rpx 0;
}
.product-nums{
  font-size: 24rpx;
  color: #B0B0B0;
  margin-left: 10rpx;
}
.product-price{
  font-family: Gobold;
  text-align: center;
  color: #E41919;
  font-size: 24rpx;
}
.buy-again{
  padding: 40rpx 30rpx 20rpx 0;
  border-top: 1rpx dashed #E7E7E7;
  justify-content: space-between;
  align-items: center;
}
.buy-pay{
  font-family: Gobold;
  color: rgb(255, 90, 90);
}
.shopping-icon{
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}
