@import "../../font/font.wxss";
@import "../../font/iconfont.wxss";

.ticket-card{
  display: flex;
  flex-direction: row;
  position: relative;
  width: 560rpx;
  margin: 30rpx;
  box-shadow: 2rpx 5rpx 10rpx 0rpx rgba(0, 0, 0, .5);
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}
.word-ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: pre-wrap;
}
.ticket-image{
  width: 230rpx;
  height: 150rpx;
  background-color: #fff;
  flex-shrink: 0;
}
.ticket-content{
  padding: 20rpx 40rpx 20rpx 20rpx;
  background-color: #fff;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  min-width: 0;
  text-align: left;
}
.ticket-name{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.ticket-price{
  font-family: Gobold;
  color: #f63;
}
.ticket-price .icon-yuan-cn-thin{
  font-size: 25rpx;
  margin-right: 8rpx;
}
.ticket-btn{
  position: absolute;
  bottom: 30rpx;
  right: -20rpx;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  text-align: center;
  color: #fff;
  background-color: #e5bf86;
  padding: 4rpx 15rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .3);
}
.icon-jiantouyou{
  font-size: 22rpx;
  margin-left: 10rpx;
}
