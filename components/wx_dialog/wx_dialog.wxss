.wx-dialog{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1200;
  overflow: hidden;
  background-color: rgba(0,0,0,.7);
}
.wx-dialog-content{
}

/********************** Animation base *****************************/
.animated {
  animation-duration: 1s;
  animation-fill-mode: both
}
/********************** Animation base end *****************************/

/********************** Animation name *****************************/
.slideInRight {
  animation-name: slideInRight
}
.slideOutRight {
  animation-name: slideOutRight
}
/********************** Animation name end *****************************/

/********************** Animation keyframes *****************************/
@keyframes slideInRight {
  0% {
    transform: translate3d(100%,0,0);
    visibility: visible
  }
  to {
    transform: translateZ(0)
  }
}
@keyframes slideOutRight {
  0% {
    transform: translateZ(0)
  }
  to {
    transform: translate3d(100%,0,0);
    visibility: hidden
  }
}
/********************** Animation keyframes end *****************************/
