
.tab-title{
  font-size: 32rpx;
  padding: 0 30rpx;
  letter-spacing: 10rpx;
}
.tab-title-active{
  font-weight: bold;
}
.tab-title-active::after{
  content: '';
  display: block;
  background-color: #2A2A2A;
  width: 100%;
  height: 5rpx;
  border-radius: 2rpx;
}

/* 商品列表 */
.product-list{
  height: 100%;
}
.menus-list{
  height: 100%;
  background-color: #ffffff;
}

/* 菜谱 */
.today-menu-wrapper{
  padding-left: 30rpx;
}
.today-menu-item{
  width: 338rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .5);
}
.today-menu-item-image{
  width: 100%;
  height: 350rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.today-menu-item-title{
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}
.today-menu-item-flower{
  padding: 0 20rpx 30rpx;
  justify-content: space-between;
}
.today-menu-item-authoricon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.today-menu-item-authorname{
  font-size: 20rpx;
  color: #B0B0B0;
}
.icon-attentionfavorfill{
  font-size: 20rpx;
  color: #676767;
}
